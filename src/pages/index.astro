    // Tab completion function
    function tabComplete() {
      const input = terminalInput.value;
      const parts = input.split(' ');
      const command = parts[0].toLowerCase();
      const lastPart = parts[parts.length - 1].toLowerCase();

      // Get all possible completions
      let suggestions: string[] = [];

      if (parts.length === 1) {
        // Command completion
        const commands = ['cd', 'ls', 'cat', 'show', 'grep', 'filter', 'tree', 'pwd', 'whoami', 'help', 'clear', 'uname', 'echo', 'neofetch', 'contact', 'skills', 'stats', 'git', 'docker', 'quote', 'matrix', 'coffee', 'hack'];
        suggestions = commands.filter(cmd => cmd.startsWith(lastPart));
      } else if (command === 'cd') {
        // Directory completion
        const dirs = Object.keys(categories);
        suggestions = dirs.filter(dir => dir.startsWith(lastPart));
      } else if (command === 'cat' || command === 'show') {
        // Project completion
        const projectKeys = Object.keys(projects);
        suggestions = projectKeys.filter(key => key.startsWith(lastPart));
      } else if (command === 'grep' || command === 'filter') {
        // Technology completion
        const allTechs = new Set<string>();
        Object.values(projects).forEach(p => p.tech.forEach(t => allTechs.add(t.toLowerCase())));
        suggestions = Array.from(allTechs).filter(tech => tech.startsWith(lastPart));
      }

      if (suggestions.length === 1) {
        // Single match - complete it
        parts[parts.length - 1] = suggestions[0];
        terminalInput.value = parts.join(' ');
      } else if (suggestions.length > 1) {
        // Multiple matches - show them
        addOutput(`<span class="text-[#9ece6a]">$</span> <span class="text-[#c0caf5]">${input}</span>`);
        addOutput(`<span class="text-[#565f89]">${suggestions.join('  ')}</span>`);
      }
    }

    // Terminal input handling
    terminalInput?.addEventListener('keydown', (e) => {
      if (e.key === 'Enter') {
        const cmd = terminalInput.value.trim();
        if (cmd) {
          commandHistory.push(cmd);
          historyIndex = commandHistory.length;
          executeCommand(cmd);
          terminalInput.value = '';
        }
      } else if (e.key === 'Tab') {
        e.preventDefault();
        tabComplete();
      } else if (e.key === 'ArrowUp') {
        e.preventDefault();
        if (historyIndex > 0) {
          historyIndex--;
          terminalInput.value = commandHistory[historyIndex];
        }
      } else if (e.key === 'ArrowDown') {
        e.preventDefault();
        if (historyIndex < commandHistory.length - 1) {
          historyIndex++;
          terminalInput.value = commandHistory[historyIndex];
        } else {
          historyIndex = commandHistory.length;
          terminalInput.value = '';
        }
      } else if (e.ctrlKey && e.key === 'l') {
        // Ctrl+L to clear (like real terminal)
        e.preventDefault();
        terminalOutput.innerHTML = '';
      } else if (e.ctrlKey && e.key === 'c') {
        // Ctrl+C to cancel current line
        e.preventDefault();
        terminalInput.value = '';
        addOutput(`<span class="text-[#9ece6a]">$</span> <span class="text-[#c0caf5]">${terminalInput.value}</span>`);
        addOutput('<span class="text-[#f7768e]">^C</span>');
      }
    });

